<!doctype html>
<html ng-app ng-init="v='true'">
<head>
    <title>FreeBies Signup Portal</title>
    <link rel="stylesheet" href="css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="css/font-awesome.min.css"> <!-- load fontawesome -->
    <link rel="stylesheet"  href="sweetalert/dist/sweetalert.css">
  <script src="sweetalert/dist/sweetalert.min.js"></script>
      <script src="js/angular.min.js"></script>
      <script src="control.js"></script>

    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body ng-controller="PersonCtrl">
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> FREEBIES-GH Signup - Support Contact(0279448831)</h1>

    <!-- show any messages that come back with authentication -->


    <!-- LOGIN FORM -->

    <div class="well">
    <h1>Welcome!</h1>
   	<div ng-bind-html="createalert"></div>

    <div class="form-group">
            <label>Person's Name:</label>
            <input id="n" type="text" class="form-control" name="name" ng-model="name">
        </div>
        <div class="form-group">
            <label>Address:</label>
            <input id="idn" type="text" class="form-control" name="idn" ng-model="address">
        </div>
        <div class="form-group">
            <label>Email(Skip if none):</label>
            <input id="e" type="email" class="form-control" name="email"  ng-model="email">
        </div>

        <div class="form-group">
            <label>Phone Number(+233)</label>
            <input type="text" id="t" class="form-control" name="pnumber" placeholder="Please Dont Enter Leading (0) of your Number" ng-model="pnumber">
        </div>
         <div class="form-group">
            <label>Provider:</label>
            <select id="ss" class="form-control" ng-model="provider">
     <option>Mtn</option>
     <option>Tigo</option>
     <option>Airtel</option>
     <option>Vodafone</option>
   </select>
        </div>

            <div class="form-group">
                    <label color="red">Unique ID:</label>
                    <input id="unique" type="text" class="form-control" placeholder="Unique ID will be Generated here After Sign Up" ng-model="uniqueid">
                </div>

        <button ng-click="signup()" id="myBtn" class="btn btn-warning btn-lg">{{msgbt}}</button>  <button ng-click="clear()"  class="btn btn-info btn-lg">Clear</button>
</div>
    <hr>

</div>

</div>
</body>
</html>
