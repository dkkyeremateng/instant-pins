<!doctype html>
<html ng-app ng-init="v='false'">
<head>
    <title>Broadcast Portal</title>
    <link rel="stylesheet" href="css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="css/font-awesome.min.css"> <!-- load fontawesome -->
      <script src="js/angular.min.js"></script>
      <script src="control3.js"></script>

    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body ng-controller="BroadcastCtrl">
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-user"></span> Broadcast Portal</h1>

    <!-- show any messages that come back with authentication -->
  

    <!-- LOGIN FORM -->
    
   	<div ng-bind-html="infoalert"></div>

    <div class="form-group">
     <label>Enter Title For Broadcast Here</label>
            <input id="msg" type="text" class="form-control" name="name" ng-model="title">
            <label>Enter Message For Broadcast Here</label>
            <input id="msg2" type="text" class="form-control" name="name" ng-model="msg">
        </div>
      

        <div><button ng-click="sendBroadcast()" class="btn btn-info btn-lg">Send Broadcast</button></div>
    
    <hr>

</div>

</div>
</body>
</html>