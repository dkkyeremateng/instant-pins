<!doctype html>
<html ng-app ng-init="v='false'">
<head>
    <title>FreeBies-GH Portal</title>
    <link rel="stylesheet" href="css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="css/font-awesome.min.css"> <!-- load fontawesome -->
      <script src="js/angular.min.js"></script>
      <script src="control2.js"></script>

    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body ng-controller="ManagerCtrll">
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-user"></span>FREEBIES-GH Portal</h1>

    <!-- show any messages that come back with authentication -->


    <!-- LOGIN FORM -->
    <div class="well">
    <h1>Account Manager Lite</h1>
   	<div ng-bind-html="infoalert"></div>

    <div class="form-group">
            <label>Unique ID:</label>
            <input id="unique" type="text" class="form-control" name="name" ng-model="unique">
        </div>
        <div class="form-group">
                <label>is Premium?:</label>
                <select class="form-control" ng-model="type">
                  <option>Yes</option>
                  <option>No</option>
                </select>
            </div>


                <div class="form-group">
                        <label>Generated Activation Key:</label>
                        <input id="actkey" type="text" class="form-control" name="name" ng-model="actkey">
                    </div>



        <div><button ng-click="activate()" class="btn btn-info btn-lg">Activate</button>&nbsp&nbsp&nbsp<button ng-click="deactivate()" class="btn btn-warning btn-lg">Deactivate</button>&nbsp&nbsp&nbsp<button ng-click="delete()" class="btn btn-danger btn-lg">Delete</button></div>
</div>
    <hr>

</div>

</div>
</body>
</html>
